<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'example@email.com' %>
    <%= f.label :email %>
  </div>
    
  <% if @minimum_password_length %>
    <p><em><%= @minimum_password_length %> characters minimum</em></p>
  <% end %>
  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: '*********' %>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: '*********' %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: '*********' %>
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to "Back", :back, class: 'btn btn-primary mt-1' %>

<hr>
<div class="alert alert-danger mt-3" role="alert">
  <h3>Cancel my account</h3>
  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></div>
</div>
